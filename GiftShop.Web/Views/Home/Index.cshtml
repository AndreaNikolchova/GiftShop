@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<main>
    <section id="banner" class="mb-5">
        <img class="img-fluid img-thumbnail h-200" src="~/Images/Green Graphic New Arrivals Website Homepage Banner.png" />
    </section>
    <div class="top3products mb-5 rounded-3">
        <h2>Top 3 products</h2>
    </div>
    <div class="row row-cols-1 row-cols-md-3 ms-5">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="product-card text-decoration-none text-dark" asp-controller="@product.Type" asp-action="Index">
                    <a class="card" asp-controller="@product.Type" asp-action="Index">
                        <img src="@product.ImageUrl" alt="@product.Name">
                    </a>
                    <div class="product-info">
                        <h3 class="product-title text-center">@product.Name</h3>
                        <p class="product-description">@product.Description</p>
                        <input type="submit" class="btn btn-primary" value="Add to Cart" name="@product.Id">
                        <span class="product-price ms-5">@product.Price BGN</span>
                    </div>
                </div>
            </div>
        }
    </div>
</main>

